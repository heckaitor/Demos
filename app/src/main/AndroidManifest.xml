<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.heckaitor.demo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".DemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".views.BezierActivity"/>
        <activity android:name=".views.interceptradio.InterceptRadioActivity"/>
        <activity android:name=".views.ImageScaleActivity"/>
        <activity
            android:name=".contents.asyncdialog.AsyncTaskActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".contents.PermissionActivity"/>
        <activity android:name=".views.UiVisibilityActivity"/>
        <activity android:name=".views.InflateLayoutActivity"/>
        <activity android:name=".views.ViewStubActivity"/>
        <activity android:name=".contents.popw.PopupWindowActivity"/>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name=".contents.touch.TouchDelegateActivity"
            android:label="@string/title_activity_touch_delegate">
        </activity>
        <activity android:name=".views.RecyclerViewActivity">
        </activity>
        <activity android:name=".views.ViewCoordinateActivity">
        </activity>
        <activity android:name=".views.ListViewActivity">
        </activity>
        <activity android:name=".anim.AlphaControlActivity">
        </activity>
    </application>

</manifest>