<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heckaitor.demo.contents.popw.PopupWindowActivity">

    <Button
        android:id="@+id/btn_show_original_pop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="系统PPW"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_show_ex_pop"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_show_ex_pop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="改进PPW"
        app:layout_constraintLeft_toRightOf="@+id/btn_show_original_pop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <CheckBox
        android:id="@+id/cb_set_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="setBackground"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_original_pop"/>

    <CheckBox
        android:id="@+id/cb_set_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="setFocusable"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/cb_set_background"
        app:layout_constraintTop_toBottomOf="@+id/cb_set_background"/>

    <CheckBox
        android:id="@+id/cb_set_outside_touchable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="setOutsideTouchable"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/cb_set_focus"
        app:layout_constraintTop_toBottomOf="@+id/cb_set_focus"/>

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/cb_set_outside_touchable"
        app:layout_constraintTop_toBottomOf="@+id/cb_set_outside_touchable"
        android:id="@+id/radioGroup"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_set_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="showAsDropDown"
            android:checked="true"
            app:layout_constraintLeft_toLeftOf="@+id/cb_set_outside_touchable"
            app:layout_constraintTop_toBottomOf="@+id/cb_set_outside_touchable"/>

        <RadioButton
            android:id="@+id/rb_set_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="showAtLocation"
            app:layout_constraintBottom_toBottomOf="@+id/rb_set_anchor"
            app:layout_constraintLeft_toRightOf="@+id/rb_set_anchor"
            app:layout_constraintTop_toTopOf="@+id/rb_set_anchor"/>
    </RadioGroup>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup">

        <TextView
            android:id="@+id/tv_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="@drawable/background"
            android:text="target"/>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
